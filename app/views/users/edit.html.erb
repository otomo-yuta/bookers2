<div class="container mt-3 px-0">
  <div class="row">
    <div class="col-5 mx-auto">
      <h2>User info</h2>
      
      <div>
        <% if @user.errors.any? %>
          <h3>
            <%= @user.errors.count %> error prohibited this obj from being saved:
          </h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
      
      <%= form_with model: @user do |f| %>
        <div class="mb-3">
          <label for="inputName">Name</label><br>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:current_user.name, class: "form-control col-12 py-2" %>
        </div>
        <div class="mb-3">
          <label for="inputImage">Image</label><br>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*"%>
        </div>
        <div class="mb-3">
          <label for="inputIntroduction">Introduction</label><br>
          <%= f.text_area :introduction, id:"inputIntroduction", class: "form-control col-12 py-2" %>
        </div>
        <div>
          <%= f.submit "Update User", class: "btn btn-secondary", style: "font-size: 1em" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
