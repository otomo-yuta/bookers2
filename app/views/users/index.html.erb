<div class="container px-0 mt-3">
  <div class="row">
    <%= render partial: 'templates/template', locals: {book: @book, user: current_user} %>
    
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td class="col-4">
                <%= image_tag user.get_profile_image(80, 80) %>
              </td>
              <td class="col-4">
                <%= user.name %>
              </td>
              <td class="col-4 text-center">
                <%= link_to "Show", user_path(user) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>