<div class="col-md-3">
  <div class="mb-3">
    <h2>User info</h2>
    <%= image_tag user.get_profile_image(100, 100) %>

    <table class="table mb-5">
      <tbody>
        <tr>
          <th>name</th>
          <td class="font-weight-bold">
            <%= user.name %>
          </td>
        </tr>
        <tr>
          <th>introduction</th>
          <td class="font-weight-bold">
            <%= user.introduction %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

  <%= link_to(edit_user_path(user), class: "btn btn-outline-secondary col-12") do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
      
  <div class="mt-3">
    <h2>New book</h2>
    <%= form_with model: book, url: books_path, method: :post do |f| %>
      <div class="mb-3">
        <label for="title">Title</label><br>
        <%= f.text_field :title, name: "book[title]", id: "title", class: "form-control col-11" %>
      </div>
      <div class="mb-3">
        <label for="opinion">Opinion</label><br>
        <%= f.text_area :body, name: "book[body]", id: "opinion", class: "form-control col-11" %>
      </div>
      <div>
        <%= f.submit 'Create Book', class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>